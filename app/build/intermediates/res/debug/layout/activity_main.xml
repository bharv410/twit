<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/twitter_login_btn"
        android:layout_width="fill_parent"
        android:layout_margin="70dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_row_selector"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/twitter_login_btn"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/tweetofthedaylayout"
        android:background="@drawable/tweetbg"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Connect Accounts"
            android:textSize="20dp"
            android:id="@+id/todText"
            android:textColor="@color/white_alpha"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/todImageView"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todImageView"
            android:background="@drawable/ic_launcher"
            android:layout_margin="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/gear"-->
        <!--android:id="@+id/button"-->
        <!--android:onClick="goToSettings"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"/>-->
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="goToSettings"
        android:layout_margin="16dp"
        fab:fab_colorNormal="#c0c0c0"
        fab:fab_colorPressed="#66cccc"
        fab:fab_colorRipple="#c6e2ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/todTitleTextView"
        android:layout_above="@+id/list"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instagram Pic of the Day"
        android:id="@+id/textView2"
        android:layout_above="@+id/tweetofthedaylayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/tweetbg"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
